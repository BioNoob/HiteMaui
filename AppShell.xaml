<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HiteMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HiteMaui"
    xmlns:pages="clr-namespace:HiteMaui.Pages"
    FlyoutBehavior="Disabled"
    Title="HiteMaui" FlyoutBackgroundImageAspect="Center" 
    FlyoutIsPresented="False" InputTransparent="False">

    <ShellContent ContentTemplate="{DataTemplate pages:DimPage}" Route="DIMM"/>

    <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" Route="Login"/>
    <ShellContent ContentTemplate="{DataTemplate pages:ListDevPage}" Route="List"/>

    <ShellContent ContentTemplate="{DataTemplate pages:RGB_Page}" Route="RGB"/>

</Shell>
